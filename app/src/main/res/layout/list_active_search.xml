<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txt_main_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="8dp"
        android:text="@string/main_books"
        android:textColor="@color/title_list"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/img_main_books"
        app:layout_constraintEnd_toEndOf="@id/img_main_books"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_main_books"
        android:layout_width="160dp"
        android:layout_height="255dp"
        android:layout_marginTop="104dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="#00F"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/txt_trending_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="241dp"
        android:layout_marginBottom="8dp"
        android:text="@string/trending_books"
        android:textColor="@color/title_list"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/img_trending_books"
        app:layout_constraintEnd_toEndOf="@id/img_trending_books"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_trending_books"
        android:layout_width="160dp"
        android:layout_height="255dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/img_main_books"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="#00F"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/txt_other_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="650dp"
        android:text="@string/other_options"
        android:textColor="@color/title_list"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/img_other_options"
        app:layout_constraintEnd_toEndOf="@id/img_other_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_other_options"
        android:layout_width="160dp"
        android:layout_height="255dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/img_trending_books"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="#00F"
        android:contentDescription="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>